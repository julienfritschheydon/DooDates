{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop"
      },
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/date-polls/dashboard",
        "http://localhost:4173/form-polls/dashboard",
        "http://localhost:4173/availability-polls/dashboard",
        "http://localhost:4173/quizz/dashboard"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 200 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lhci-report"
    }
  }
}
